{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },

        {
            "name": "Debug FPS tutorial",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/fps_tutorial.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false,
            "stopOnEntry": false
        },

        {
            "name": "Debug KNN tutorial",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/knn_tutorial.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false,
            "stopOnEntry": false
        },

    ]
}